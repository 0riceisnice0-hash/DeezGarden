---
import { siteConfig } from '../config';

interface Props {
  text?: string;
  variant?: 'primary' | 'secondary';
  size?: 'sm' | 'md' | 'lg';
  showDualCTA?: boolean;
}

const { 
  text = "Call Now for Free Quote", 
  variant = 'primary',
  size = 'lg',
  showDualCTA = false
} = Astro.props;

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-4 py-2.5 md:px-8 md:py-4 text-sm md:text-lg'
};

const variantClasses = {
  primary: 'bg-fresh-green hover:bg-deep-green',
  secondary: 'bg-accent-yellow hover:bg-yellow-500 text-text-dark'
};
---

<div class="text-center my-6 md:my-10 px-4">
  {showDualCTA ? (
    <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center">
      <a 
        href={`tel:${siteConfig.phone}`}
        class="inline-flex items-center gap-2 bg-fresh-green text-white font-bold rounded-lg transition shadow-lg hover:shadow-xl hover:bg-deep-green px-5 py-3 md:px-8 md:py-4 text-sm md:text-lg w-full sm:w-auto justify-center"
      >
        <span>ðŸ“ž</span>
        <span>Call Now</span>
      </a>
      <button 
        type="button"
        class="quote-cta-btn inline-flex items-center gap-2 bg-deep-green text-white font-bold rounded-lg transition shadow-lg hover:shadow-xl hover:bg-fresh-green px-5 py-3 md:px-8 md:py-4 text-sm md:text-lg border-2 border-fresh-green w-full sm:w-auto justify-center cursor-pointer"
      >
        <span>ðŸ’¬</span>
        <span>Get a Free Quote</span>
      </button>
    </div>
  ) : (
    <a 
      href={`tel:${siteConfig.phone}`}
      class={`inline-block text-white font-bold rounded-lg transition shadow-lg hover:shadow-xl w-full sm:w-auto ${variantClasses[variant]} ${sizeClasses[size]}`}
    >
      {text}
    </a>
  )}
  <p class="mt-2 md:mt-4 text-sm md:text-lg font-semibold text-deep-green">{siteConfig.phoneFormatted}</p>
</div>
