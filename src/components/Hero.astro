---
import { siteConfig } from '../config';

interface Props {
  title: string;
  location?: string;
  subtitle?: string;
  showCTA?: boolean;
  showQuoteButton?: boolean;
  heroImage?: string;
}

const { 
  title, 
  location = siteConfig.location, 
  subtitle,
  showCTA = true,
  showQuoteButton = false,
  heroImage 
} = Astro.props;

const baseUrl = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
---

<section class="relative text-white py-8 md:py-20 min-h-[220px] md:min-h-[400px] flex items-center">
  <!-- Background Image -->
  {heroImage && (
    <img 
      src={`${baseUrl}assets/images/${heroImage}`}
      alt=""
      aria-hidden="true"
      class="absolute inset-0 w-full h-full object-cover"
    />
  )}
  
  <!-- Fallback solid background if no image -->
  {!heroImage && (
    <div class="absolute inset-0 bg-gradient-to-r from-deep-green to-fresh-green"></div>
  )}
  
  <!-- Dark overlay for text readability -->
  <div class="absolute inset-0 bg-black bg-opacity-50 md:bg-opacity-50"></div>
  
  <!-- Content -->
  <div class="container mx-auto px-4 text-center relative z-10">
    <h1 class="text-xl sm:text-2xl md:text-4xl lg:text-5xl font-bold mb-2 md:mb-4 text-white drop-shadow-lg">{title}</h1>
    {subtitle && <p class="text-sm sm:text-base md:text-xl lg:text-2xl mb-2 md:mb-4 text-white drop-shadow-md">{subtitle}</p>}
    <p class="text-xs sm:text-sm md:text-lg lg:text-xl mb-3 md:mb-8 text-white drop-shadow-md">Serving {location}</p>
    
    {showCTA && (
      <div class="mt-2 md:mt-8 flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center">
        <a 
          href={`tel:${siteConfig.phone}`}
          class="inline-block bg-white text-deep-green px-4 py-2 md:px-8 md:py-4 rounded-lg font-bold text-sm md:text-lg hover:bg-gray-100 transition shadow-lg w-auto"
        >
          Call {siteConfig.phoneFormatted}
        </a>
        {showQuoteButton && (
          <button 
            type="button"
            id="hero-quote-btn"
            class="inline-block bg-fresh-green text-white px-4 py-2 md:px-8 md:py-4 rounded-lg font-bold text-sm md:text-lg hover:bg-deep-green transition shadow-lg border-2 border-white w-auto cursor-pointer"
          >
            Get a Free Quote
          </button>
        )}
      </div>
    )}
  </div>
</section>
