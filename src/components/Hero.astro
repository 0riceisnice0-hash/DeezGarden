---
import { siteConfig } from '../config';

interface Props {
  title: string;
  location?: string;
  subtitle?: string;
  showCTA?: boolean;
  showQuoteButton?: boolean;
  heroImage?: string;
}

const { 
  title, 
  location = siteConfig.location, 
  subtitle,
  showCTA = true,
  showQuoteButton = false,
  heroImage 
} = Astro.props;

const baseUrl = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
---

<section class="relative text-white py-8 md:py-20 min-h-[220px] md:min-h-[400px] flex items-center">
  <!-- Background Image -->
  {heroImage && (
    <img 
      src={`${baseUrl}assets/images/${heroImage}`}
      alt=""
      aria-hidden="true"
      class="absolute inset-0 w-full h-full object-cover"
    />
  )}
  
  <!-- Fallback solid background if no image -->
  {!heroImage && (
    <div class="absolute inset-0 bg-gradient-to-r from-deep-green to-fresh-green"></div>
  )}
  
  <!-- Stronger dark overlay for more contrast -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/55 to-black/70"></div>
  
  <!-- Subtle decorative pattern overlay -->
  <div class="absolute inset-0 opacity-[0.03]" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;%3E%3Cg fill=&quot;%23ffffff&quot; fill-opacity=&quot;1&quot;%3E%3Cpath d=&quot;M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z&quot;/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  
  <!-- Content -->
  <div class="container mx-auto px-4 text-center relative z-10">
    <h1 class="text-2xl sm:text-3xl md:text-5xl lg:text-6xl font-extrabold mb-2 md:mb-4 text-white drop-shadow-[0_2px_4px_rgba(0,0,0,0.5)] tracking-tight uppercase">{title}</h1>
    {subtitle && <p class="text-sm sm:text-base md:text-xl lg:text-2xl mb-2 md:mb-4 text-white drop-shadow-md font-medium">{subtitle}</p>}
    <p class="text-xs sm:text-sm md:text-lg lg:text-xl mb-3 md:mb-6 text-white/90 drop-shadow-md">Serving {location}</p>
    
    {showCTA && (
      <div class="mt-2 md:mt-6 flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center">
        <a 
          href={`tel:${siteConfig.phone}`}
          class="inline-block bg-white text-deep-green px-5 py-2.5 md:px-8 md:py-4 rounded-lg font-extrabold text-sm md:text-lg hover:bg-accent-yellow hover:text-text-dark transition-all shadow-xl hover:shadow-2xl w-auto border-2 border-white hover:border-accent-yellow"
        >
          ðŸ“ž Call {siteConfig.phoneFormatted}
        </a>
        {showQuoteButton && (
          <button 
            type="button"
            id="hero-quote-btn"
            class="inline-block bg-fresh-green text-white px-5 py-2.5 md:px-8 md:py-4 rounded-lg font-extrabold text-sm md:text-lg hover:bg-light-green transition-all shadow-xl hover:shadow-2xl border-2 border-white w-auto cursor-pointer"
          >
            ðŸ’¬ Get a Free Quote
          </button>
        )}
      </div>
    )}
  </div>
</section>
