---
import { siteConfig } from '../config';

interface Props {
  title: string;
  location?: string;
  subtitle?: string;
  showCTA?: boolean;
  showQuoteButton?: boolean;
  heroImage?: string;
  compact?: boolean;
}

const { 
  title, 
  location = siteConfig.location, 
  subtitle,
  showCTA = true,
  showQuoteButton = false,
  heroImage,
  compact = false
} = Astro.props;

const baseUrl = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
---

<section class={`relative text-white flex items-center ${compact ? 'min-h-[30vh] md:min-h-[35vh]' : 'min-h-[60vh] md:min-h-[75vh]'}`}>
  <!-- Background Image -->
  {heroImage && (
    <img 
      src={`${baseUrl}assets/images/${heroImage}`}
      alt=""
      aria-hidden="true"
      class="absolute inset-0 w-full h-full object-cover"
    />
  )}
  
  <!-- Fallback solid background if no image -->
  {!heroImage && (
    <div class="absolute inset-0 bg-gradient-to-r from-deep-green to-fresh-green"></div>
  )}
  
  <!-- Refined dark overlay - tasteful gradient for text readability -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/55 via-black/45 to-black/60"></div>
  
  <!-- Subtle decorative pattern overlay -->
  <div class="absolute inset-0 opacity-[0.02]" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;%3E%3Cg fill=&quot;%23ffffff&quot; fill-opacity=&quot;1&quot;%3E%3Cpath d=&quot;M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z&quot;/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  
  <!-- Content -->
  <div class="container mx-auto px-4 text-center relative z-10 py-16 md:py-24">
    <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-extrabold mb-4 md:mb-6 text-white drop-shadow-[0_3px_6px_rgba(0,0,0,0.4)] tracking-tight">{title}</h1>
    {subtitle && <p class="text-base sm:text-lg md:text-xl lg:text-2xl mb-4 md:mb-6 text-white/95 drop-shadow-md font-medium tracking-tight max-w-3xl mx-auto">{subtitle}</p>}
    <p class="text-sm sm:text-base md:text-lg lg:text-xl mb-6 md:mb-10 text-white/85 drop-shadow-md font-normal">Serving {location}</p>
    
    {showCTA && (
      <div class="mt-4 md:mt-8 flex flex-col sm:flex-row gap-4 sm:gap-5 justify-center items-center">
        <a 
          href={`tel:${siteConfig.phone}`}
          class="inline-block bg-white text-deep-green px-6 py-3 md:px-10 md:py-5 rounded-lg font-bold text-base md:text-lg hover:bg-accent-yellow hover:text-text-dark transition-all shadow-xl hover:shadow-2xl w-auto border-2 border-white hover:border-accent-yellow tracking-tight"
        >
          ðŸ“ž Call {siteConfig.phoneFormatted}
        </a>
        {showQuoteButton && (
          <button 
            type="button"
            id="hero-quote-btn"
            class="inline-block bg-fresh-green text-white px-6 py-3 md:px-10 md:py-5 rounded-lg font-bold text-base md:text-lg hover:bg-light-green transition-all shadow-xl hover:shadow-2xl border-2 border-white w-auto cursor-pointer tracking-tight"
          >
            ðŸ’¬ Get a Free Quote
          </button>
        )}
      </div>
    )}
  </div>
</section>
