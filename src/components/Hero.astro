---
import { siteConfig } from '../config';

interface Props {
  title: string;
  location?: string;
  subtitle?: string;
  showCTA?: boolean;
}

const { 
  title, 
  location = siteConfig.location, 
  subtitle,
  showCTA = true 
} = Astro.props;
---

<section class="bg-gradient-to-r from-deep-green to-fresh-green text-white py-20">
  <div class="container mx-auto px-4 text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-4 text-white">{title}</h1>
    {subtitle && <p class="text-xl md:text-2xl mb-4 text-white opacity-90">{subtitle}</p>}
    <p class="text-lg md:text-xl mb-8 text-white opacity-90">Serving {location}</p>
    
    {showCTA && (
      <div class="mt-8">
        <a 
          href={`tel:${siteConfig.phone}`}
          class="inline-block bg-white text-deep-green px-8 py-4 rounded-lg font-bold text-lg hover:bg-gray-100 transition shadow-lg"
        >
          ðŸ“ž Call {siteConfig.phoneFormatted}
        </a>
      </div>
    )}
  </div>
</section>
