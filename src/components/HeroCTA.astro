---
// Hero-style call to action bar for placement before footer
import { siteConfig } from '../config';
---

<section class="bg-deep-green py-10 md:py-16 relative overflow-hidden">
  <!-- Decorative background pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 left-0 w-32 h-32 bg-fresh-green rounded-full -translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 right-0 w-48 h-48 bg-light-green rounded-full translate-x-1/4 translate-y-1/4"></div>
  </div>
  
  <div class="container mx-auto px-4 text-center relative z-10">
    <h2 class="text-xl md:text-3xl font-bold text-white mb-3 md:mb-4">Ready to Transform Your Garden?</h2>
    <p class="text-white/90 text-sm md:text-lg mb-6 md:mb-8 max-w-xl mx-auto">Get in touch today for a free, no-obligation quote from our friendly team</p>
    
    <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center">
      <a 
        href={`tel:${siteConfig.phone}`}
        class="inline-flex items-center gap-2 bg-white text-deep-green px-6 py-3 md:px-8 md:py-4 rounded-lg font-bold text-base md:text-lg hover:bg-gray-100 transition shadow-lg w-full sm:w-auto justify-center"
      >
        <span>ðŸ“ž</span>
        <span>Call {siteConfig.phoneFormatted}</span>
      </a>
      <button 
        type="button"
        class="quote-cta-btn inline-flex items-center gap-2 bg-fresh-green text-white px-6 py-3 md:px-8 md:py-4 rounded-lg font-bold text-base md:text-lg hover:bg-light-green transition shadow-lg border-2 border-white/30 w-full sm:w-auto justify-center cursor-pointer"
      >
        <span>ðŸ’¬</span>
        <span>Get a Free Quote</span>
      </button>
    </div>
  </div>
</section>
