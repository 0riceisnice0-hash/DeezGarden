---
interface Props {
  beforeImage: string;
  afterImage: string;
  beforeAlt?: string;
  afterAlt?: string;
}

const { 
  beforeImage, 
  afterImage, 
  beforeAlt = "Before",
  afterAlt = "After"
} = Astro.props;

const baseUrl = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
---

<div class="before-after-container">
  <div class="before-after-slider">
    <div class="before-image">
      <img src={`${baseUrl}assets/images/${beforeImage}`} alt={beforeAlt} />
      <span class="label before-label">Before</span>
    </div>
    <div class="after-image">
      <img src={`${baseUrl}assets/images/${afterImage}`} alt={afterAlt} />
      <span class="label after-label">After</span>
    </div>
    <div class="slider-handle">
      <div class="slider-line"></div>
      <div class="slider-button">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M15 18l-6-6 6-6" />
        </svg>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 18l6-6-6-6" />
        </svg>
      </div>
    </div>
    <input type="range" min="0" max="100" value="50" class="slider-input" aria-label="Before and after comparison slider" />
  </div>
</div>

<style>
  .before-after-container {
    width: 100%;
    max-width: 28rem;
    margin: 0 auto;
  }

  .before-after-slider {
    position: relative;
    width: 100%;
    height: 10rem;
    overflow: hidden;
    border-radius: 0.5rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    user-select: none;
  }

  @media (min-width: 768px) {
    .before-after-slider {
      height: auto;
      aspect-ratio: 4 / 3;
    }
  }

  .before-image,
  .after-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .before-image img,
  .after-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .after-image {
    clip-path: inset(0 50% 0 0);
  }

  .label {
    position: absolute;
    bottom: 0.75rem;
    padding: 0.25rem 0.75rem;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .before-label {
    right: 0.75rem;
  }

  .after-label {
    left: 0.75rem;
  }

  .slider-handle {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
    z-index: 10;
  }

  .slider-line {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 3px;
    background-color: white;
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.5);
  }

  .slider-button {
    position: relative;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background-color: white;
    border-radius: 50%;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
  }

  .slider-button svg {
    width: 1rem;
    height: 1rem;
    color: #2f6b3f;
  }

  .slider-input {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: ew-resize;
    z-index: 20;
    margin: 0;
    padding: 0;
  }
</style>

<script>
  document.querySelectorAll('.before-after-slider').forEach((sliderEl) => {
    const slider = sliderEl as HTMLElement;
    const input = slider.querySelector('.slider-input') as HTMLInputElement;
    const afterImage = slider.querySelector('.after-image') as HTMLElement;
    const handle = slider.querySelector('.slider-handle') as HTMLElement;

    if (!input || !afterImage || !handle) return;

    const updateSlider = (value: number) => {
      afterImage.style.clipPath = `inset(0 ${100 - value}% 0 0)`;
      handle.style.left = `${value}%`;
    };

    input.addEventListener('input', (e) => {
      const target = e.target as HTMLInputElement;
      updateSlider(Number(target.value));
    });

    // Touch and mouse drag support
    let isDragging = false;
    
    const getPositionPercent = (clientX: number) => {
      const rect = slider.getBoundingClientRect();
      const x = clientX - rect.left;
      return Math.max(0, Math.min(100, (x / rect.width) * 100));
    };

    slider.addEventListener('mousedown', () => { isDragging = true; });
    slider.addEventListener('touchstart', () => { isDragging = true; });
    
    document.addEventListener('mouseup', () => { isDragging = false; });
    document.addEventListener('touchend', () => { isDragging = false; });

    slider.addEventListener('mousemove', (e) => {
      if (!isDragging) return;
      const mouseEvent = e as MouseEvent;
      const percent = getPositionPercent(mouseEvent.clientX);
      input.value = String(percent);
      updateSlider(percent);
    });

    slider.addEventListener('touchmove', (e) => {
      if (!isDragging) return;
      const touchEvent = e as TouchEvent;
      const percent = getPositionPercent(touchEvent.touches[0].clientX);
      input.value = String(percent);
      updateSlider(percent);
    });

    // Initialize
    updateSlider(50);
  });
</script>
