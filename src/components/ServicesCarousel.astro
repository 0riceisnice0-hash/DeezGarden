---
// Mobile-optimized services carousel component
import { services as configServices } from '../config';

// Extend config services with mobile-specific data
const services = [
  {
    ...configServices[0],
    title: "Garden Renovations & Maintenance",
    description: "Complete garden care including lawn mowing, hedge trimming, and general upkeep.",
    image: "/assets/images/before and after lawn 1.jpg",
    link: `/services/${configServices[0].slug}/`,
    features: ["Lawn mowing", "Hedge trimming", "Garden clearances", "Landscaping"]
  },
  {
    ...configServices[1],
    title: "Rubbish Clearance & Removals",
    description: "House, garage, and garden clearances with our licensed waste carrier service.",
    image: "/assets/images/rubbish removal 1.jpg",
    link: `/services/${configServices[1].slug}/`,
    features: ["Garden waste", "House clearances", "Licensed carrier", "Responsible disposal"]
  },
  {
    ...configServices[2],
    title: "Man with Van & Scrap Metal",
    description: "Removals, delivery service, and scrap metal collection across Northamptonshire.",
    image: "/assets/images/van scrap png.png",
    link: `/services/${configServices[2].slug}/`,
    features: ["Local removals", "Scrap metal", "Furniture removal", "Competitive rates"]
  },
  {
    ...configServices[3],
    title: "Property Maintenance Services",
    description: "Practical property jobs including gutter cleaning, insulation, and plastering.",
    image: "/assets/images/house.jpg",
    link: `/services/${configServices[3].slug}/`,
    features: ["Gutter cleaning", "Insulation", "Plastering"]
  }
];
---

<div class="services-carousel md:hidden">
  <div class="carousel-container overflow-x-auto snap-x snap-mandatory scroll-smooth hide-scrollbar">
    <div class="flex gap-3 px-4 pb-4">
      {services.map((service) => (
        <div class="service-card snap-center flex-shrink-0 w-[85vw] max-w-[320px] bg-white rounded-xl shadow-md overflow-hidden">
          <div class="relative h-32 bg-gray-100">
            <img 
              src={service.image} 
              alt={service.title}
              class="w-full h-full object-cover"
            />
          </div>
          <div class="p-4">
            <h3 class="text-base font-bold mb-2 text-deep-green">{service.title}</h3>
            <p class="text-sm text-gray-600 mb-3 line-clamp-2">{service.description}</p>
            <div class="flex flex-wrap gap-1 mb-3">
              {service.features.slice(0, 3).map(feature => (
                <span class="text-xs bg-light-green/20 text-deep-green px-2 py-0.5 rounded-full">
                  âœ“ {feature}
                </span>
              ))}
            </div>
            <a 
              href={service.link}
              class="block text-center bg-fresh-green text-white text-sm py-2 px-4 rounded-lg font-semibold hover:bg-deep-green transition"
            >
              Learn More
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
  
  <!-- Carousel indicators with keyboard accessibility -->
  <div class="flex justify-center gap-2 mt-2" role="tablist" aria-label="Service slides">
    {services.map((_, index) => (
      <button 
        type="button"
        class="carousel-dot w-2.5 h-2.5 rounded-full bg-gray-300 transition-colors focus:outline-none focus:ring-2 focus:ring-fresh-green focus:ring-offset-1"
        data-index={index}
        role="tab"
        aria-label={`Go to service ${index + 1}`}
        aria-selected={index === 0 ? "true" : "false"}
        tabindex={index === 0 ? 0 : -1}
      ></button>
    ))}
  </div>
</div>

<style>
  .hide-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  
  .hide-scrollbar::-webkit-scrollbar {
    display: none;
  }
  
  .carousel-dot.active {
    background-color: #4caf50;
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  // Carousel scroll indicator with keyboard support
  const container = document.querySelector('.carousel-container') as HTMLElement | null;
  const dots = document.querySelectorAll('.carousel-dot');
  
  if (container && dots.length > 0) {
    // Set first dot as active initially
    dots[0]?.classList.add('active');
    dots[0]?.setAttribute('aria-selected', 'true');
    
    const scrollToIndex = (index: number) => {
      const card = container.querySelector('.service-card') as HTMLElement | null;
      const cardWidth = card?.offsetWidth || 280;
      const gap = 12;
      container.scrollTo({
        left: index * (cardWidth + gap),
        behavior: 'smooth'
      });
      
      // Update aria-selected and tabindex
      dots.forEach((dot, i) => {
        dot.setAttribute('aria-selected', i === index ? 'true' : 'false');
        dot.setAttribute('tabindex', i === index ? '0' : '-1');
      });
    };
    
    container.addEventListener('scroll', () => {
      const scrollLeft = container.scrollLeft;
      const card = container.querySelector('.service-card') as HTMLElement | null;
      const cardWidth = card?.offsetWidth || 280;
      const gap = 12;
      const activeIndex = Math.round(scrollLeft / (cardWidth + gap));
      
      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === activeIndex);
        dot.setAttribute('aria-selected', index === activeIndex ? 'true' : 'false');
      });
    });
    
    // Click and keyboard support for dots
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => scrollToIndex(index));
      
      dot.addEventListener('keydown', (e) => {
        const event = e as KeyboardEvent;
        if (event.key === 'Enter' || event.key === ' ') {
          event.preventDefault();
          scrollToIndex(index);
        } else if (event.key === 'ArrowRight' || event.key === 'ArrowDown') {
          event.preventDefault();
          const nextIndex = (index + 1) % dots.length;
          (dots[nextIndex] as HTMLElement)?.focus();
          scrollToIndex(nextIndex);
        } else if (event.key === 'ArrowLeft' || event.key === 'ArrowUp') {
          event.preventDefault();
          const prevIndex = (index - 1 + dots.length) % dots.length;
          (dots[prevIndex] as HTMLElement)?.focus();
          scrollToIndex(prevIndex);
        }
      });
    });
  }
</script>
