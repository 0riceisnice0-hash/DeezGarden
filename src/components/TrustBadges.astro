---
import { siteConfig } from '../config';

const badges = [];

if (siteConfig.trust.insured) {
  badges.push({ icon: '✅', text: 'Fully Insured' });
}

if (siteConfig.trust.licensedWasteCarrier) {
  badges.push({ icon: '♻️', text: 'Licensed Waste Carrier' });
}

if (siteConfig.trust.friendlyProfessional) {
  badges.push({ icon: '⭐', text: 'Friendly Professional Service' });
}

// Only show component if there are badges
if (badges.length === 0) return null;
---

<div class="bg-white py-6 shadow-sm border-y border-gray-200">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap justify-center items-center gap-6 md:gap-12">
      {badges.map(badge => (
        <div class="flex items-center space-x-2">
          <span class="text-2xl">{badge.icon}</span>
          <span class="text-sm md:text-base font-semibold text-deep-green">{badge.text}</span>
        </div>
      ))}
    </div>
  </div>
</div>
