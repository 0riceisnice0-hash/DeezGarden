---
import { siteConfig } from '../config';

const badges = [];

if (siteConfig.trust.insured) {
  badges.push({ text: 'Fully Insured' });
}

if (siteConfig.trust.licensedWasteCarrier) {
  badges.push({ text: 'Licensed Waste Carrier' });
}

if (siteConfig.trust.friendlyProfessional) {
  badges.push({ text: 'Friendly Professional Service' });
}

// Only show component if there are badges
if (badges.length === 0) return null;
---

<div class="bg-deep-green/10 py-2 md:py-4 border-y-2 border-fresh-green/40">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap justify-center items-center gap-3 md:gap-8 lg:gap-12">
      {badges.map(badge => (
        <div class="flex items-center space-x-1.5 md:space-x-2">
          <div class="w-5 h-5 md:w-7 md:h-7 bg-fresh-green rounded-full flex items-center justify-center flex-shrink-0 shadow-md">
            <svg class="w-3 h-3 md:w-4 md:h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
          </div>
          <span class="text-xs md:text-sm lg:text-base font-bold text-deep-green">{badge.text}</span>
        </div>
      ))}
    </div>
  </div>
</div>
