---
import { siteConfig } from '../config';
---

<!-- Footer top accent -->
<div class="h-1 bg-gradient-to-r from-fresh-green via-light-green to-fresh-green"></div>

<footer class="bg-deep-green text-white pt-4 md:pt-6">
  <div class="container mx-auto px-4 py-5 md:py-12">
    <!-- Mobile: Compact layout -->
    <div class="md:hidden">
      <!-- Contact info at top on mobile -->
      <div class="text-center mb-4">
        <h3 class="text-lg font-bold mb-2 text-white">{siteConfig.name}</h3>
        <div class="flex flex-wrap justify-center gap-3 text-sm">
          <a href={`tel:${siteConfig.phone}`} class="footer-link font-semibold">üìû {siteConfig.phoneFormatted}</a>
          <a href={`mailto:${siteConfig.email}`} class="footer-link">‚úâÔ∏è Email</a>
          {siteConfig.facebook && (
            <a href={siteConfig.facebook} target="_blank" rel="noopener noreferrer" class="footer-link">Facebook</a>
          )}
        </div>
      </div>
      
      <!-- Quick Links and Services side by side on mobile -->
      <div class="grid grid-cols-2 gap-4 text-center text-xs border-t border-fresh-green/30 pt-4">
        <div>
          <h4 class="font-semibold mb-2 text-white text-sm">Quick Links</h4>
          <ul class="space-y-1">
            <li><a href="/" class="footer-link">Home</a></li>
            <li><a href="/services/" class="footer-link">Services</a></li>
            <li><a href="/areas/" class="footer-link">Areas</a></li>
            <li><a href="/contact/" class="footer-link">Contact</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-semibold mb-2 text-white text-sm">Services</h4>
          <ul class="space-y-1">
            <li><a href="/services/garden-maintenance/" class="footer-link">Gardens</a></li>
            <li><a href="/services/clearance-removals/" class="footer-link">Clearance</a></li>
            <li><a href="/services/man-with-van/" class="footer-link">Man with Van</a></li>
          </ul>
        </div>
      </div>
      
      <!-- Bottom Bar Mobile -->
      <div class="border-t border-fresh-green/30 mt-4 pt-3 text-center text-xs opacity-80">
        <p>&copy; {new Date().getFullYear()} {siteConfig.name}</p>
        {siteConfig.trust.insured && siteConfig.trust.licensedWasteCarrier && (
          <p class="mt-1">Fully Insured | Licensed Waste Carrier</p>
        )}
        <p class="mt-2 opacity-70">
          <a href="https://hydronmarketing.com" target="_blank" rel="noopener noreferrer" class="footer-link">
            Designed and hosted by hydronmarketing.com
          </a>
        </p>
      </div>
    </div>
    
    <!-- Desktop: Original layout -->
    <div class="hidden md:block">
      <div class="grid grid-cols-3 gap-8">
        <!-- Company Info -->
        <div class="text-left">
          <h3 class="text-xl font-bold mb-4 text-white">{siteConfig.name}</h3>
          <p class="mb-4 text-base">Professional garden maintenance and clearance services in {siteConfig.location}.</p>
          <div class="space-y-2">
            <p><a href={`tel:${siteConfig.phone}`} class="footer-link text-lg font-semibold">üìû {siteConfig.phoneFormatted}</a></p>
            <p><a href={`mailto:${siteConfig.email}`} class="footer-link break-all text-base">‚úâÔ∏è {siteConfig.email}</a></p>
            {siteConfig.facebook && (
              <p>
                <a href={siteConfig.facebook} target="_blank" rel="noopener noreferrer" class="footer-link text-base">
                  Join us on Facebook
                </a>
              </p>
            )}
          </div>
          <div class="mt-6">
            <h4 class="font-semibold mb-2 text-base">Service Coverage</h4>
            <p class="text-sm opacity-90">Serving Northamptonshire including Aylesbury and surrounding areas</p>
          </div>
        </div>
        
        <!-- Quick Links -->
        <div class="text-left">
          <h3 class="text-xl font-bold mb-4 text-white">Quick Links</h3>
          <ul class="space-y-2">
            <li><a href="/" class="footer-link py-1 inline-block">Home</a></li>
            <li><a href="/services/" class="footer-link py-1 inline-block">Services</a></li>
            <li><a href="/areas/" class="footer-link py-1 inline-block">Areas We Cover</a></li>
            <li><a href="/reviews/" class="footer-link py-1 inline-block">Reviews</a></li>
            <li><a href="/gallery/" class="footer-link py-1 inline-block">Gallery</a></li>
            <li><a href="/contact/" class="footer-link py-1 inline-block">Contact</a></li>
          </ul>
        </div>
        
        <!-- Services -->
        <div class="text-left">
          <h3 class="text-xl font-bold mb-4 text-white">Our Services</h3>
          <ul class="space-y-2">
            <li><a href="/services/garden-maintenance/" class="footer-link py-1 inline-block">Garden Maintenance</a></li>
            <li><a href="/services/clearance-removals/" class="footer-link py-1 inline-block">Clearance & Removals</a></li>
            <li><a href="/services/man-with-van/" class="footer-link py-1 inline-block">Man with Van</a></li>
          </ul>
        </div>
      </div>
      
      <!-- Bottom Bar Desktop -->
      <div class="border-t border-fresh-green mt-8 pt-8 text-center text-sm">
        <p>&copy; {new Date().getFullYear()} {siteConfig.name}. All rights reserved.</p>
        {siteConfig.trust.insured && siteConfig.trust.licensedWasteCarrier && (
          <p class="mt-2">Fully Insured | Licensed Waste Carrier</p>
        )}
        <p class="mt-3 text-xs opacity-70">
          <a href="https://hydronmarketing.com" target="_blank" rel="noopener noreferrer" class="footer-link hover:opacity-100">
            Designed and hosted by hydronmarketing.com
          </a>
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-link {
    color: white !important;
    text-decoration: none;
    transition: color 0.2s;
    min-height: 44px;
    display: inline-flex;
    align-items: center;
  }
  
  .footer-link:hover {
    color: #8bc34a !important; /* light-green */
  }
  
  /* Improve tap targets on mobile */
  @media (max-width: 768px) {
    footer ul li {
      padding: 0.25rem 0;
    }
  }
</style>
