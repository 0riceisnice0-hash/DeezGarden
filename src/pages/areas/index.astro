---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import CallToAction from '../../components/CallToAction.astro';
import { siteConfig } from '../../config';

const allAreas = [
  ...siteConfig.primaryAreas,
  ...siteConfig.secondaryAreas,
  ...siteConfig.extendedAreas
];
---

<BaseLayout 
  title="Areas We Cover - Garden & Clearance Services Across Northamptonshire"
  description="Dee'z Gardens provides professional garden maintenance and clearance services across Northampton, Kettering, Wellingborough, and throughout Northamptonshire."
>
  <Header slot="header" />
  
  <Hero 
    title="Areas We Cover"
    subtitle="Serving Northampton and surrounding areas"
  />
  
  <section class="py-16 bg-gradient-to-br from-light-green/10 to-fresh-green/10">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center mb-12">
        <p class="text-lg">
          Based in Northampton, {siteConfig.name} provides professional garden maintenance, clearance, and man with van services throughout Northamptonshire and the surrounding counties.
        </p>
        <p class="text-lg mt-4">
          We serve all the areas listed below, and if your location isn't shown, please get in touch - we may still be able to help!
        </p>
      </div>
      
      <!-- Coverage Map -->
      <div class="max-w-5xl mx-auto mb-12">
        <h2 class="text-2xl font-bold mb-6 text-center">Our Coverage Area</h2>
        <div class="bg-white rounded-lg shadow-lg p-8">
          <div class="aspect-video bg-gradient-to-br from-fresh-green/20 to-light-green/30 rounded-lg flex items-center justify-center relative overflow-hidden">
            <!-- Map illustration with pins -->
            <svg viewBox="0 0 800 600" class="w-full h-full">
              <!-- Background -->
              <rect width="800" height="600" fill="#f0f7f0"/>
              
              <!-- Central area (Northampton region) -->
              <ellipse cx="400" cy="300" rx="200" ry="150" fill="#8bc34a" opacity="0.3"/>
              
              <!-- Extended coverage circles -->
              <circle cx="400" cy="300" r="100" fill="none" stroke="#4caf50" stroke-width="2" stroke-dasharray="5,5"/>
              <circle cx="400" cy="300" r="180" fill="none" stroke="#8bc34a" stroke-width="2" stroke-dasharray="5,5"/>
              
              <!-- Location pins -->
              <!-- Northampton (centre) -->
              <g transform="translate(400, 300)">
                <circle r="8" fill="#2f6b3f"/>
                <path d="M 0,-15 Q 0,-25 -8,-25 Q -15,-25 -15,-18 Q -15,-12 0,0 Q 15,-12 15,-18 Q 15,-25 8,-25 Q 0,-25 0,-15" fill="#4caf50"/>
                <text y="-30" text-anchor="middle" font-size="14" font-weight="bold" fill="#2f6b3f">Northampton</text>
              </g>
              
              <!-- Wellingborough (E) -->
              <g transform="translate(480, 280)">
                <circle r="6" fill="#2f6b3f"/>
                <path d="M 0,-12 Q 0,-18 -6,-18 Q -10,-18 -10,-14 Q -10,-10 0,0 Q 10,-10 10,-14 Q 10,-18 6,-18 Q 0,-18 0,-12" fill="#4caf50"/>
                <text y="25" text-anchor="middle" font-size="12" fill="#2f6b3f">Wellingborough</text>
              </g>
              
              <!-- Kettering (NE) -->
              <g transform="translate(500, 220)">
                <circle r="6" fill="#2f6b3f"/>
                <path d="M 0,-12 Q 0,-18 -6,-18 Q -10,-18 -10,-14 Q -10,-10 0,0 Q 10,-10 10,-14 Q 10,-18 6,-18 Q 0,-18 0,-12" fill="#4caf50"/>
                <text y="25" text-anchor="middle" font-size="12" fill="#2f6b3f">Kettering</text>
              </g>
              
              <!-- Daventry (W) -->
              <g transform="translate(300, 320)">
                <circle r="6" fill="#2f6b3f"/>
                <path d="M 0,-12 Q 0,-18 -6,-18 Q -10,-18 -10,-14 Q -10,-10 0,0 Q 10,-10 10,-14 Q 10,-18 6,-18 Q 0,-18 0,-12" fill="#4caf50"/>
                <text y="25" text-anchor="middle" font-size="12" fill="#2f6b3f">Daventry</text>
              </g>
              
              <!-- Rushden (E) -->
              <g transform="translate(520, 310)">
                <circle r="6" fill="#2f6b3f"/>
                <path d="M 0,-12 Q 0,-18 -6,-18 Q -10,-18 -10,-14 Q -10,-10 0,0 Q 10,-10 10,-14 Q 10,-18 6,-18 Q 0,-18 0,-12" fill="#4caf50"/>
                <text y="25" text-anchor="middle" font-size="12" fill="#2f6b3f">Rushden</text>
              </g>
              
              <!-- Milton Keynes (SW) -->
              <g transform="translate(320, 400)">
                <circle r="5" fill="#4caf50"/>
                <path d="M 0,-10 Q 0,-15 -5,-15 Q -8,-15 -8,-12 Q -8,-9 0,0 Q 8,-9 8,-12 Q 8,-15 5,-15 Q 0,-15 0,-10" fill="#8bc34a"/>
                <text y="20" text-anchor="middle" font-size="11" fill="#2f6b3f">Milton Keynes</text>
              </g>
              
              <!-- Towcester (SW) -->
              <g transform="translate(360, 360)">
                <circle r="5" fill="#4caf50"/>
                <path d="M 0,-10 Q 0,-15 -5,-15 Q -8,-15 -8,-12 Q -8,-9 0,0 Q 8,-9 8,-12 Q 8,-15 5,-15 Q 0,-15 0,-10" fill="#8bc34a"/>
                <text y="20" text-anchor="middle" font-size="11" fill="#2f6b3f">Towcester</text>
              </g>
              
              <!-- Corby (N) -->
              <g transform="translate(470, 180)">
                <circle r="5" fill="#4caf50"/>
                <path d="M 0,-10 Q 0,-15 -5,-15 Q -8,-15 -8,-12 Q -8,-9 0,0 Q 8,-9 8,-12 Q 8,-15 5,-15 Q 0,-15 0,-10" fill="#8bc34a"/>
                <text y="20" text-anchor="middle" font-size="11" fill="#2f6b3f">Corby</text>
              </g>
              
              <!-- Aylesbury (S) -->
              <g transform="translate(350, 450)">
                <circle r="5" fill="#4caf50"/>
                <path d="M 0,-10 Q 0,-15 -5,-15 Q -8,-15 -8,-12 Q -8,-9 0,0 Q 8,-9 8,-12 Q 8,-15 5,-15 Q 0,-15 0,-10" fill="#8bc34a"/>
                <text y="20" text-anchor="middle" font-size="11" fill="#2f6b3f">Aylesbury</text>
              </g>
              
              <!-- Market Harborough (N) -->
              <g transform="translate(420, 200)">
                <circle r="5" fill="#4caf50"/>
                <path d="M 0,-10 Q 0,-15 -5,-15 Q -8,-15 -8,-12 Q -8,-9 0,0 Q 8,-9 8,-12 Q 8,-15 5,-15 Q 0,-15 0,-10" fill="#8bc34a"/>
                <text y="20" text-anchor="middle" font-size="11" fill="#2f6b3f">Market Harborough</text>
              </g>
              
              <!-- Legend -->
              <g transform="translate(50, 520)">
                <text font-size="12" font-weight="bold" fill="#2f6b3f">Coverage:</text>
                <circle cx="10" cy="25" r="5" fill="#4caf50"/>
                <text x="20" y="29" font-size="11" fill="#2f6b3f">Primary Areas</text>
                <circle cx="10" cy="45" r="4" fill="#8bc34a"/>
                <text x="20" y="49" font-size="11" fill="#2f6b3f">Extended Coverage</text>
              </g>
            </svg>
          </div>
          <p class="text-center text-sm text-gray-600 mt-4">
            Approximate coverage map showing our primary service areas across Northamptonshire and surrounding counties
          </p>
        </div>
      </div>
    </div>
  </section>
      
      <div class="max-w-5xl mx-auto">
        <h2 class="text-2xl font-bold mb-6 text-center">Primary Service Areas</h2>
        <p class="text-center mb-6 text-gray-700">Our main coverage area where we operate daily</p>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 mb-12">
          {siteConfig.primaryAreas.map(area => (
            <a 
              href={`/DeezGarden/areas/${area.toLowerCase().replace(/ /g, '-')}/`}
              class="bg-fresh-green text-white p-4 rounded-lg hover:bg-deep-green transition text-center font-semibold shadow-md hover:shadow-lg"
            >
              {area}
            </a>
          ))}
        </div>
        
        <h2 class="text-2xl font-bold mb-6 text-center">Extended Service Areas</h2>
        <p class="text-center mb-6 text-gray-700">Additional areas we regularly serve</p>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 mb-12">
          {siteConfig.secondaryAreas.map(area => (
            <a 
              href={`/DeezGarden/areas/${area.toLowerCase().replace(/ /g, '-')}/`}
              class="bg-white border-2 border-fresh-green text-deep-green p-4 rounded-lg hover:bg-fresh-green hover:text-white transition text-center font-semibold"
            >
              {area}
            </a>
          ))}
        </div>
        
        <h2 class="text-2xl font-bold mb-6 text-center">Wider Coverage Area</h2>
        <p class="text-center mb-6 text-gray-700">We also cover these nearby towns and cities</p>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
          {siteConfig.extendedAreas.map(area => (
            <a 
              href={`/DeezGarden/areas/${area.toLowerCase().replace(/ /g, '-')}/`}
              class="bg-bg-light border border-gray-300 text-text-dark p-4 rounded-lg hover:bg-light-green hover:text-white transition text-center font-semibold"
            >
              {area}
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <CallToAction />
  
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">Don't See Your Area?</h2>
        <p class="text-lg mb-8">
          We're constantly expanding our service area. If your location isn't listed above, please get in touch - we may still be able to help or can arrange a visit for larger jobs.
        </p>
        <a 
          href="/DeezGarden/contact/"
          class="inline-block bg-fresh-green text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-deep-green transition"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
  
  <Footer slot="footer" />
</BaseLayout>
