---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import CallToAction from '../../components/CallToAction.astro';
import HeroCTA from '../../components/HeroCTA.astro';
import { siteConfig } from '../../config';
---

<BaseLayout 
  title="Areas We Cover | Garden & Clearance Services Across Northamptonshire"
  description="Dee'z Gardens provides professional garden maintenance, rubbish clearance, landscaping & man with van services across Northampton, Wellingborough, Kettering, Rushden, Daventry and throughout Northamptonshire. Call 07305 195098."
>
  <Header slot="header" />
  
  <Hero 
    heroImage="hero.jpg"
    title="Areas We Cover"
    subtitle="Serving Northampton and surrounding areas"
    showQuoteButton={true}
  />
  
  <!-- Intro Section - Improved Typography -->
  <section class="py-8 md:py-16 bg-bg-sage border-b border-light-green/20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl shadow-md p-6 md:p-10 border border-light-green/20">
          <div class="text-center">
            <h2 class="text-lg md:text-2xl font-bold text-deep-green mb-3 md:mb-4">Serving Northamptonshire & Beyond</h2>
            <p class="text-sm md:text-lg text-gray-700 leading-relaxed mb-3">
              Based in Northampton, {siteConfig.name} provides professional garden maintenance, clearance, and man with van services throughout Northamptonshire.
            </p>
            <p class="text-sm md:text-lg text-gray-700 leading-relaxed">
              We serve all the areas listed below, and if your location isn't shown, please get in touch â€” we're always happy to help!
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <section class="py-6 md:py-16 bg-bg-light">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        
        <!-- Coverage Map - Live Google Maps Embed -->
        <div class="mb-4 md:mb-12">
          <div class="relative w-full overflow-hidden rounded-lg shadow-lg">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d155234.567!2d-0.8971!3d52.2405!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x48770f1bdb8b0f3b%3A0x2ace52a7c90a7840!2sNorthampton%2C%20UK!5e0!3m2!1sen!2suk!4v1640000000000"
              width="100%"
              style="border:0; display: block;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Service Coverage Area - Northamptonshire"
              class="w-full h-48 md:h-[450px]"
            ></iframe>
          </div>
          <p class="text-center text-xs text-gray-600 mt-2 md:mt-4">
            Service coverage area centered on Northampton
          </p>
        </div>
        
        <div class="space-y-4 md:space-y-12">
          <!-- Primary Service Areas -->
          <div>
            <h2 class="text-base md:text-2xl font-bold mb-2 md:mb-4">Primary Service Areas</h2>
            <p class="text-gray-700 mb-2 md:mb-4 text-xs md:text-base">Our main coverage area where we operate daily:</p>
            <div class="flex flex-wrap gap-2 md:gap-3">
              {siteConfig.primaryAreas.map((area) => (
                <a 
                  href={`/areas/${area.toLowerCase().replace(/ /g, '-')}/`}
                  class="bg-fresh-green/10 text-deep-green px-3 py-1.5 md:px-4 md:py-2 rounded-full font-semibold hover:bg-fresh-green hover:text-white transition text-xs md:text-base"
                >
                  {area}
                </a>
              ))}
            </div>
          </div>

          <!-- Extended Service Areas -->
          <div>
            <h2 class="text-base md:text-2xl font-bold mb-2 md:mb-4">Extended Service Areas</h2>
            <p class="text-gray-700 mb-2 md:mb-4 text-xs md:text-base">Additional areas we regularly serve:</p>
            <div class="flex flex-wrap gap-2 md:gap-3">
              {siteConfig.secondaryAreas.map((area) => (
                <a 
                  href={`/areas/${area.toLowerCase().replace(/ /g, '-')}/`}
                  class="bg-light-green/10 text-deep-green px-3 py-1.5 md:px-4 md:py-2 rounded-full font-semibold hover:bg-fresh-green hover:text-white transition text-xs md:text-base"
                >
                  {area}
                </a>
              ))}
            </div>
          </div>

          <!-- Wider Coverage Area -->
          <div>
            <h2 class="text-base md:text-2xl font-bold mb-2 md:mb-4">Wider Coverage Area</h2>
            <p class="text-gray-700 mb-2 md:mb-4 text-xs md:text-base">We also cover these nearby towns and cities:</p>
            <div class="flex flex-wrap gap-2 md:gap-3">
              {siteConfig.extendedAreas.map((area) => (
                <a 
                  href={`/areas/${area.toLowerCase().replace(/ /g, '-')}/`}
                  class="bg-gray-100 text-deep-green px-3 py-1.5 md:px-4 md:py-2 rounded-full font-semibold hover:bg-fresh-green hover:text-white transition text-xs md:text-base"
                >
                  {area}
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <CallToAction showDualCTA={true} />
  
  <section class="py-4 md:py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-lg md:text-3xl font-bold mb-2 md:mb-6">Don't See Your Area?</h2>
        <p class="text-sm md:text-lg mb-4 md:mb-8">
          We're constantly expanding our service area. If your location isn't listed above, please get in touch!
        </p>
        <a 
          href="/contact/"
          class="inline-block bg-fresh-green text-white px-4 py-2.5 md:px-8 md:py-4 rounded-lg font-bold text-sm md:text-lg hover:bg-deep-green transition w-full sm:w-auto"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
  
  <HeroCTA />
  
  <Footer slot="footer" />
</BaseLayout>
