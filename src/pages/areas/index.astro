---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import CallToAction from '../../components/CallToAction.astro';
import { siteConfig } from '../../config';

const allAreas = [
  ...siteConfig.primaryAreas,
  ...siteConfig.secondaryAreas,
  ...siteConfig.extendedAreas
];
---

<BaseLayout 
  title="Areas We Cover - Garden & Clearance Services Across Northamptonshire"
  description="Dee'z Gardens provides professional garden maintenance and clearance services across Northampton, Kettering, Wellingborough, and throughout Northamptonshire."
>
  <Header slot="header" />
  
  <Hero 
    title="Areas We Cover"
    subtitle="Serving Northampton and surrounding areas"
  />
  
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="mb-12">
          <p class="text-lg mb-4">
            Based in Northampton, {siteConfig.name} provides professional garden maintenance, clearance, and man with van services throughout Northamptonshire and the surrounding counties.
          </p>
          <p class="text-lg">
            We serve all the areas listed below, and if your location isn't shown, please get in touch - we may still be able to help!
          </p>
        </div>
        
        <div class="space-y-12">
          <!-- Primary Service Areas -->
          <div>
            <h2 class="text-2xl font-bold mb-4">Primary Service Areas</h2>
            <p class="text-gray-700 mb-4">Our main coverage area where we operate daily:</p>
            <div class="text-lg">
              {siteConfig.primaryAreas.map((area, index) => (
                <>
                  <a 
                    href={`/DeezGarden/areas/${area.toLowerCase().replace(/ /g, '-')}/`}
                    class="text-fresh-green hover:text-deep-green font-semibold hover:underline"
                  >
                    {area}
                  </a>
                  {index < siteConfig.primaryAreas.length - 1 && <span class="text-gray-600"> • </span>}
                </>
              ))}
            </div>
          </div>

          <!-- Extended Service Areas -->
          <div>
            <h2 class="text-2xl font-bold mb-4">Extended Service Areas</h2>
            <p class="text-gray-700 mb-4">Additional areas we regularly serve:</p>
            <div class="text-lg">
              {siteConfig.secondaryAreas.map((area, index) => (
                <>
                  <a 
                    href={`/DeezGarden/areas/${area.toLowerCase().replace(/ /g, '-')}/`}
                    class="text-fresh-green hover:text-deep-green font-semibold hover:underline"
                  >
                    {area}
                  </a>
                  {index < siteConfig.secondaryAreas.length - 1 && <span class="text-gray-600"> • </span>}
                </>
              ))}
            </div>
          </div>

          <!-- Wider Coverage Area -->
          <div>
            <h2 class="text-2xl font-bold mb-4">Wider Coverage Area</h2>
            <p class="text-gray-700 mb-4">We also cover these nearby towns and cities:</p>
            <div class="text-lg">
              {siteConfig.extendedAreas.map((area, index) => (
                <>
                  <a 
                    href={`/DeezGarden/areas/${area.toLowerCase().replace(/ /g, '-')}/`}
                    class="text-fresh-green hover:text-deep-green font-semibold hover:underline"
                  >
                    {area}
                  </a>
                  {index < siteConfig.extendedAreas.length - 1 && <span class="text-gray-600"> • </span>}
                </>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <CallToAction />
  
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">Don't See Your Area?</h2>
        <p class="text-lg mb-8">
          We're constantly expanding our service area. If your location isn't listed above, please get in touch - we may still be able to help or can arrange a visit for larger jobs.
        </p>
        <a 
          href="/DeezGarden/contact/"
          class="inline-block bg-fresh-green text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-deep-green transition"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
  
  <Footer slot="footer" />
</BaseLayout>
