---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import CallToAction from '../../components/CallToAction.astro';
import { siteConfig } from '../../config';
---

<BaseLayout 
  title="Areas We Cover - Garden & Clearance Services Across Northamptonshire"
  description="Dee'z Gardens provides professional garden maintenance and clearance services across Northampton, Kettering, Wellingborough, and throughout Northamptonshire."
>
  <Header slot="header" />
  
  <Hero 
    heroImage="hero.jpg"
    title="Areas We Cover"
    subtitle="Serving Northampton and surrounding areas"
  />
  
  <section class="py-10 md:py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="mb-8 md:mb-12">
          <p class="text-base md:text-lg mb-4">
            Based in Northampton, {siteConfig.name} provides professional garden maintenance, clearance, and man with van services throughout Northamptonshire and the surrounding counties.
          </p>
          <p class="text-base md:text-lg">
            We serve all the areas listed below, and if your location isn't shown, please get in touch - we may still be able to help!
          </p>
        </div>
        
        <!-- Coverage Map - Live Google Maps Embed -->
        <div class="mb-8 md:mb-12">
          <div class="relative w-full overflow-hidden rounded-lg shadow-lg">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d155234.567!2d-0.8971!3d52.2405!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x48770f1bdb8b0f3b%3A0x2ace52a7c90a7840!2sNorthampton%2C%20UK!5e0!3m2!1sen!2suk!4v1640000000000"
              width="100%"
              height="300"
              style="border:0; display: block;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Service Coverage Area - Northamptonshire"
              class="w-full h-64 md:h-[450px]"
            ></iframe>
          </div>
          <p class="text-center text-xs md:text-sm text-gray-600 mt-3 md:mt-4">
            Interactive map showing our service coverage area centered on Northampton
          </p>
        </div>
        
        <div class="space-y-8 md:space-y-12">
          <!-- Primary Service Areas -->
          <div>
            <h2 class="text-xl md:text-2xl font-bold mb-3 md:mb-4">Primary Service Areas</h2>
            <p class="text-gray-700 mb-3 md:mb-4 text-sm md:text-base">Our main coverage area where we operate daily:</p>
            <div class="text-base md:text-lg leading-relaxed">
              {siteConfig.primaryAreas.map((area, index) => (
                <>
                  <a 
                    href={`/DeezGarden/areas/${area.toLowerCase().replace(/ /g, '-')}/`}
                    class="text-fresh-green hover:text-deep-green font-semibold hover:underline inline-block py-1"
                  >
                    {area}
                  </a>
                  {index < siteConfig.primaryAreas.length - 1 && <span class="text-gray-600"> • </span>}
                </>
              ))}
            </div>
          </div>

          <!-- Extended Service Areas -->
          <div>
            <h2 class="text-xl md:text-2xl font-bold mb-3 md:mb-4">Extended Service Areas</h2>
            <p class="text-gray-700 mb-3 md:mb-4 text-sm md:text-base">Additional areas we regularly serve:</p>
            <div class="text-base md:text-lg leading-relaxed">
              {siteConfig.secondaryAreas.map((area, index) => (
                <>
                  <a 
                    href={`/DeezGarden/areas/${area.toLowerCase().replace(/ /g, '-')}/`}
                    class="text-fresh-green hover:text-deep-green font-semibold hover:underline inline-block py-1"
                  >
                    {area}
                  </a>
                  {index < siteConfig.secondaryAreas.length - 1 && <span class="text-gray-600"> • </span>}
                </>
              ))}
            </div>
          </div>

          <!-- Wider Coverage Area -->
          <div>
            <h2 class="text-xl md:text-2xl font-bold mb-3 md:mb-4">Wider Coverage Area</h2>
            <p class="text-gray-700 mb-3 md:mb-4 text-sm md:text-base">We also cover these nearby towns and cities:</p>
            <div class="text-base md:text-lg leading-relaxed">
              {siteConfig.extendedAreas.map((area, index) => (
                <>
                  <a 
                    href={`/DeezGarden/areas/${area.toLowerCase().replace(/ /g, '-')}/`}
                    class="text-fresh-green hover:text-deep-green font-semibold hover:underline inline-block py-1"
                  >
                    {area}
                  </a>
                  {index < siteConfig.extendedAreas.length - 1 && <span class="text-gray-600"> • </span>}
                </>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <CallToAction />
  
  <section class="py-10 md:py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-2xl md:text-3xl font-bold mb-4 md:mb-6">Don't See Your Area?</h2>
        <p class="text-base md:text-lg mb-6 md:mb-8">
          We're constantly expanding our service area. If your location isn't listed above, please get in touch - we may still be able to help or can arrange a visit for larger jobs.
        </p>
        <a 
          href="/DeezGarden/contact/"
          class="inline-block bg-fresh-green text-white px-6 py-3 md:px-8 md:py-4 rounded-lg font-bold text-base md:text-lg hover:bg-deep-green transition w-full sm:w-auto"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
  
  <Footer slot="footer" />
</BaseLayout>
