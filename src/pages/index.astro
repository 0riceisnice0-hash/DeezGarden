---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import TrustBadges from '../components/TrustBadges.astro';
import CallToAction from '../components/CallToAction.astro';
import ServicesCarousel from '../components/ServicesCarousel.astro';
import AreasCompact from '../components/AreasCompact.astro';
import WhyChooseUsCompact from '../components/WhyChooseUsCompact.astro';
import HeroCTA from '../components/HeroCTA.astro';
import BeforeAfterSlider from '../components/BeforeAfterSlider.astro';
import SlideOutQuoteForm from '../components/SlideOutQuoteForm.astro';
import ReviewsCarousel from '../components/ReviewsCarousel.astro';
import { siteConfig } from '../config';
---

<BaseLayout 
  title="Dee'z Gardens - Garden Maintenance, Clearance & Landscaping Northampton"
  description="Professional garden maintenance, rubbish clearance, landscaping & man with van services in Northampton & Northamptonshire. Fully insured, licensed waste carrier. Free quotes - call 07305 195098."
>
  <Header slot="header" />
  
  <!-- Slide-out Quote Form -->
  <SlideOutQuoteForm />
  
  <Hero 
    title="Professional Garden & Clearance Services"
    subtitle="Garden maintenance, clearance, and landscaping across Northamptonshire"
    heroImage="hero.jpg"
    showQuoteButton={true}
  />
  
  <TrustBadges />
  
  <!-- Introduction Section -->
  <section class="py-4 md:py-12 bg-bg-light border-b-2 border-fresh-green/20">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-12 items-center">
          <div>
            <h2 class="text-xl md:text-3xl font-extrabold mb-3 md:mb-6 tracking-tight">Welcome to {siteConfig.name}</h2>
            <p class="text-sm md:text-lg mb-2 md:mb-4">
              We're a local, trusted gardening and clearance company based in Northampton, providing professional services throughout Northamptonshire.
            </p>
            <p class="hidden md:block text-lg mb-4">
              Whether you need regular garden maintenance, a complete garden renovation, rubbish clearance, or a reliable man with van service, we're here to help. Our team is fully insured and operates as a licensed waste carrier, giving you complete peace of mind.
            </p>
            <p class="text-sm md:text-lg">
              We pride ourselves on tidy work, clear communication, and reliability. <span class="hidden md:inline">Get in touch today for a free, no-obligation quote.</span>
            </p>
          </div>
          <div class="flex flex-col items-center">
            <BeforeAfterSlider 
              beforeImage="renovation1.jpg" 
              afterImage="renovation1 after.jpg"
              beforeAlt="Garden before renovation"
              afterAlt="Garden after renovation"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Services Overview - Stacked Layout -->
  <section class="py-2 md:py-6 bg-bg-sage border-b-2 border-fresh-green/20">
    <div class="container mx-auto px-4">
      <h2 class="text-lg md:text-xl font-bold text-center text-deep-green">Our Services</h2>
    </div>
    
    <!-- Mobile: Services Carousel -->
    <ServicesCarousel />
  </section>
  
  <!-- Desktop: Full Service Sections (hidden on mobile) -->
  <!-- Service 1: Garden Renovations & Maintenance - Off-white background -->
  <section class="hidden md:block py-12 bg-bg-light border-b-2 border-fresh-green/20">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-12 items-center">
          <div>
            <h3 class="text-xl md:text-2xl font-extrabold mb-3 md:mb-4 tracking-tight">Garden Renovations and Maintenance</h3>
            <p class="text-base md:text-lg text-gray-700 mb-4 md:mb-6">
              Complete garden care including lawn mowing, hedge trimming, and general upkeep. We transform overgrown gardens and maintain beautiful outdoor spaces throughout Northamptonshire.
            </p>
            <ul class="space-y-2 mb-4 md:mb-6 text-sm md:text-base">
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">âœ“</span>
                <span>Regular lawn mowing and maintenance</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">âœ“</span>
                <span>Hedge trimming and pruning</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">âœ“</span>
                <span>Garden clearances and tidy-ups</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">âœ“</span>
                <span>Landscaping and garden design</span>
              </li>
            </ul>
            <a 
              href="/services/garden-maintenance/"
              class="inline-block w-full sm:w-auto text-center bg-fresh-green text-white px-6 py-3 rounded-lg font-bold hover:bg-deep-green transition-all shadow-lg hover:shadow-xl border-2 border-fresh-green hover:border-deep-green"
            >
              Learn More About Garden Services
            </a>
          </div>
          <div class="relative order-first lg:order-last">
            <img 
              src="/assets/images/before and after lawn 1.jpg" 
              alt="Garden Renovations and Maintenance Services" 
              class="rounded-lg shadow-xl w-full h-48 md:h-80 object-contain bg-gray-100 border-2 border-gray-200"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service 2: Rubbish Clearance & Removals - Light sage background (hidden on mobile) -->
  <section class="hidden md:block py-12 bg-bg-sage border-b-2 border-fresh-green/20">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-12 items-center">
          <div class="relative order-first">
            <img 
              src="/assets/images/rubbish removal 1.jpg" 
              alt="Rubbish Clearance and Removals Services" 
              class="rounded-lg shadow-xl w-full h-48 md:h-80 object-contain bg-gray-100 border-2 border-gray-200"
            />
          </div>
          <div>
            <h3 class="text-xl md:text-2xl font-extrabold mb-3 md:mb-4 tracking-tight">Rubbish Clearance and Removals</h3>
            <p class="text-base md:text-lg text-gray-700 mb-4 md:mb-6">
              House, garage, and garden clearances with our licensed waste carrier service. We handle everything from garden waste to full property clearances, disposing of all waste responsibly.
            </p>
            <ul class="space-y-2 mb-4 md:mb-6 text-sm md:text-base">
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">âœ“</span>
                <span>Garden waste and rubbish removal</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">âœ“</span>
                <span>House and garage clearances</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">âœ“</span>
                <span>Licensed waste carrier service</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">âœ“</span>
                <span>Responsible waste disposal</span>
              </li>
            </ul>
            <a 
              href="/services/clearance-removals/"
              class="inline-block w-full sm:w-auto text-center bg-fresh-green text-white px-6 py-3 rounded-lg font-bold hover:bg-deep-green transition-all shadow-lg hover:shadow-xl border-2 border-fresh-green hover:border-deep-green"
            >
              Learn More About Clearance Services
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service 3: Man with Van & Scrap Metal - Off-white background (hidden on mobile) -->
  <section class="hidden md:block py-12 bg-bg-light border-b-2 border-fresh-green/20">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-12 items-center">
          <div>
            <h3 class="text-xl md:text-2xl font-extrabold mb-3 md:mb-4 tracking-tight">Man with Van and Scrap Metal</h3>
            <p class="text-base md:text-lg text-gray-700 mb-4 md:mb-6">
              Removals, delivery service, and scrap metal collection across Northamptonshire. Whether you need items moved locally or scrap metal collected, we provide reliable, affordable service.
            </p>
            <ul class="space-y-2 mb-4 md:mb-6 text-sm md:text-base">
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">âœ“</span>
                <span>Local removals and deliveries</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">âœ“</span>
                <span>Scrap metal collection</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">âœ“</span>
                <span>Furniture and appliance removal</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">âœ“</span>
                <span>Competitive rates</span>
              </li>
            </ul>
            <a 
              href="/services/man-with-van/"
              class="inline-block w-full sm:w-auto text-center bg-fresh-green text-white px-6 py-3 rounded-lg font-bold hover:bg-deep-green transition-all shadow-lg hover:shadow-xl border-2 border-fresh-green hover:border-deep-green"
            >
              Learn More About Removals
            </a>
          </div>
          <div class="relative order-first lg:order-last">
            <img 
              src="/assets/images/van scrap png.png" 
              alt="Man with Van and Scrap Metal Services" 
              class="rounded-lg shadow-xl w-full h-48 md:h-80 object-cover border-2 border-gray-200"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service 4: Property Maintenance Services - Light sage background (hidden on mobile) -->
  <section class="hidden md:block py-12 bg-bg-sage">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-12 items-center">
          <div class="relative order-first">
            <img 
              src="/assets/images/house.jpg" 
              alt="Property Maintenance Services" 
              class="rounded-lg shadow-xl w-full h-48 md:h-80 object-cover border-2 border-gray-200"
            />
          </div>
          <div>
            <h3 class="text-xl md:text-2xl font-extrabold mb-3 md:mb-4 tracking-tight">Property Maintenance Services</h3>
            <p class="text-base md:text-lg text-gray-700 mb-4 md:mb-6">
              Practical property jobs including gutter cleaning, insulation, and plastering. We handle the essential maintenance tasks that keep your property in top condition.
            </p>
            <ul class="space-y-2 mb-4 md:mb-6 text-sm md:text-base">
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">âœ“</span>
                <span>Gutter cleaning and maintenance</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">âœ“</span>
                <span>Loft insulation top-ups</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">âœ“</span>
                <span>Plastering and patch repairs</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">âœ“</span>
                <span>Smooth finish ready for paint</span>
              </li>
            </ul>
            <a 
              href="/services/property-maintenance/"
              class="inline-block w-full sm:w-auto text-center bg-fresh-green text-white px-6 py-3 rounded-lg font-bold hover:bg-deep-green transition-all shadow-lg hover:shadow-xl border-2 border-fresh-green hover:border-deep-green"
            >
              Learn More About Property Maintenance
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <CallToAction showDualCTA={true} />
  
  <!-- Customer Reviews Carousel -->
  <ReviewsCarousel />
  
  <!-- Service Areas -->
  <section class="py-6 md:py-16 bg-bg-light border-t-2 border-b-2 border-fresh-green/20">
    <div class="container mx-auto px-4">
      <h2 class="text-xl md:text-3xl font-extrabold text-center mb-2 md:mb-4 tracking-tight">Areas We Cover</h2>
      <p class="text-center text-sm md:text-lg mb-6 md:mb-8 max-w-2xl mx-auto text-gray-600">
        Serving Northampton and throughout Northamptonshire
      </p>
      
      <!-- Mobile: Compact areas with expand -->
      <AreasCompact />
      
      <!-- Desktop: Full grid of areas -->
      <div class="hidden md:block max-w-4xl mx-auto">
        <div class="grid grid-cols-3 lg:grid-cols-5 gap-4 text-center">
          {[...siteConfig.primaryAreas, ...siteConfig.secondaryAreas].map(area => (
            <a 
              href={`/areas/${area.toLowerCase().replace(/ /g, '-')}/`}
              class="bg-white p-4 rounded-lg hover:bg-fresh-green hover:text-white transition-all font-bold shadow-md hover:shadow-lg border-2 border-gray-200 hover:border-fresh-green text-base"
            >
              {area}
            </a>
          ))}
        </div>
        
        <div class="text-center mt-8">
          <a 
            href="/areas/"
            class="text-fresh-green font-bold hover:text-deep-green transition text-lg"
          >
            View All Coverage Areas â†’
          </a>
        </div>
      </div>
      
      <!-- Dual CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center mt-6 md:mt-10">
        <a 
          href={`tel:${siteConfig.phone}`}
          class="inline-flex items-center gap-2 bg-fresh-green text-white font-extrabold rounded-lg transition-all shadow-lg hover:shadow-xl hover:bg-deep-green px-5 py-3 md:px-8 md:py-4 text-sm md:text-lg w-full sm:w-auto justify-center border-2 border-fresh-green hover:border-deep-green"
        >
          <span>ðŸ“ž</span>
          <span>Call Now</span>
        </a>
        <button 
          type="button"
          class="quote-cta-btn inline-flex items-center gap-2 bg-deep-green text-white font-extrabold rounded-lg transition-all shadow-lg hover:shadow-xl hover:bg-fresh-green px-5 py-3 md:px-8 md:py-4 text-sm md:text-lg border-2 border-deep-green hover:border-fresh-green w-full sm:w-auto justify-center cursor-pointer"
        >
          <span>ðŸ’¬</span>
          <span>Get a Free Quote</span>
        </button>
      </div>
    </div>
  </section>
  
  <!-- Why Choose Us - Dee'z Gardens Information Section -->
  <section class="py-6 md:py-12 bg-warm-white border-b-2 border-fresh-green/20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-4 md:mb-8">
          <h2 class="text-xl md:text-3xl font-extrabold mb-2 md:mb-3 tracking-tight">Why Choose {siteConfig.name}?</h2>
          <p class="text-gray-600 text-sm md:text-lg max-w-2xl mx-auto">
            Your local, trusted garden and clearance specialists serving Northamptonshire
          </p>
        </div>
        
        <div class="bg-white rounded-2xl shadow-lg p-6 md:p-10 border-2 border-fresh-green/20">
          <WhyChooseUsCompact />
        </div>
      </div>
    </div>
  </section>
  
  <!-- Hero CTA before footer -->
  <HeroCTA />
  
  <Footer slot="footer" />
</BaseLayout>
