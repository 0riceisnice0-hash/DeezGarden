---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import TrustBadges from '../components/TrustBadges.astro';
import CallToAction from '../components/CallToAction.astro';
import ServicesCarousel from '../components/ServicesCarousel.astro';
import AreasCompact from '../components/AreasCompact.astro';
import WhyChooseUsCompact from '../components/WhyChooseUsCompact.astro';
import HeroCTA from '../components/HeroCTA.astro';
import { siteConfig } from '../config';
---

<BaseLayout 
  title={siteConfig.name}
  description="Professional garden maintenance, clearance, and landscaping services in Northampton. Fully insured with licensed waste carrier. Call 07305 195098 for a free quote."
>
  <Header slot="header" />
  
  <Hero 
    title="Professional Garden & Clearance Services"
    subtitle="Transforming gardens across Northamptonshire"
    heroImage="hero.jpg"
  />
  
  <TrustBadges />
  
  <!-- Introduction Section -->
  <section class="py-4 md:py-16 bg-bg-light">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-12 items-center">
          <div>
            <h2 class="text-xl md:text-3xl font-bold mb-3 md:mb-6">Welcome to {siteConfig.name}</h2>
            <p class="text-sm md:text-lg mb-2 md:mb-4">
              We're a local, trusted gardening and clearance company based in Northampton, providing professional services throughout Northamptonshire.
            </p>
            <p class="hidden md:block text-lg mb-4">
              Whether you need regular garden maintenance, a complete garden renovation, rubbish clearance, or a reliable man with van service, we're here to help. Our team is fully insured and operates as a licensed waste carrier, giving you complete peace of mind.
            </p>
            <p class="text-sm md:text-lg">
              We pride ourselves on tidy work, clear communication, and reliability. <span class="hidden md:inline">Get in touch today for a free, no-obligation quote.</span>
            </p>
          </div>
          <div class="flex flex-col items-center">
            <img 
              src="/DeezGarden/assets/images/dwayne.jpg" 
              alt="Duane - Owner of Dee'z Gardens" 
              class="rounded-lg shadow-lg w-full max-w-xs md:max-w-md h-40 md:h-auto object-cover object-top"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Services Overview - Stacked Layout -->
  <section class="py-4 md:py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-xl md:text-3xl font-bold text-center mb-4 md:mb-16">Our Services</h2>
    </div>
    
    <!-- Mobile: Services Carousel -->
    <ServicesCarousel />
  </section>
  
  <!-- Desktop: Full Service Sections (hidden on mobile) -->
  <!-- Service 1: Garden Renovations & Maintenance - Off-white background -->
  <section class="hidden md:block py-16 bg-bg-light">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-12 items-center">
          <div>
            <h3 class="text-xl md:text-2xl font-bold mb-3 md:mb-4">Garden Renovations and Maintenance</h3>
            <p class="text-base md:text-lg text-gray-700 mb-4 md:mb-6">
              Complete garden care including lawn mowing, hedge trimming, and general upkeep. We transform overgrown gardens and maintain beautiful outdoor spaces throughout Northamptonshire.
            </p>
            <ul class="space-y-2 mb-4 md:mb-6 text-sm md:text-base">
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Regular lawn mowing and maintenance</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Hedge trimming and pruning</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Garden clearances and tidy-ups</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Landscaping and garden design</span>
              </li>
            </ul>
            <a 
              href="/DeezGarden/services/garden-maintenance/"
              class="inline-block w-full sm:w-auto text-center bg-fresh-green text-white px-6 py-3 rounded-lg font-semibold hover:bg-deep-green transition"
            >
              Learn More About Garden Services
            </a>
          </div>
          <div class="relative order-first lg:order-last">
            <img 
              src="/DeezGarden/assets/images/before and after lawn 1.jpg" 
              alt="Garden Renovations and Maintenance Services" 
              class="rounded-lg shadow-lg w-full h-48 md:h-80 object-contain bg-gray-100"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service 2: Rubbish Clearance & Removals - Light green tint (hidden on mobile) -->
  <section class="hidden md:block py-16 bg-gradient-to-br from-light-green/10 to-fresh-green/5">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-12 items-center">
          <div class="relative order-first">
            <img 
              src="/DeezGarden/assets/images/rubbish removal 1.jpg" 
              alt="Rubbish Clearance and Removals Services" 
              class="rounded-lg shadow-lg w-full h-48 md:h-80 object-contain bg-gray-100"
            />
          </div>
          <div>
            <h3 class="text-xl md:text-2xl font-bold mb-3 md:mb-4">Rubbish Clearance and Removals</h3>
            <p class="text-base md:text-lg text-gray-700 mb-4 md:mb-6">
              House, garage, and garden clearances with our licensed waste carrier service. We handle everything from garden waste to full property clearances, disposing of all waste responsibly.
            </p>
            <ul class="space-y-2 mb-4 md:mb-6 text-sm md:text-base">
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Garden waste and rubbish removal</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>House and garage clearances</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Licensed waste carrier service</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Responsible waste disposal</span>
              </li>
            </ul>
            <a 
              href="/DeezGarden/services/clearance-removals/"
              class="inline-block w-full sm:w-auto text-center bg-fresh-green text-white px-6 py-3 rounded-lg font-semibold hover:bg-deep-green transition"
            >
              Learn More About Clearance Services
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service 3: Man with Van & Scrap Metal - Off-white background (hidden on mobile) -->
  <section class="hidden md:block py-16 bg-bg-light">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-12 items-center">
          <div>
            <h3 class="text-xl md:text-2xl font-bold mb-3 md:mb-4">Man with Van and Scrap Metal</h3>
            <p class="text-base md:text-lg text-gray-700 mb-4 md:mb-6">
              Removals, delivery service, and scrap metal collection across Northamptonshire. Whether you need items moved locally or scrap metal collected, we provide reliable, affordable service.
            </p>
            <ul class="space-y-2 mb-4 md:mb-6 text-sm md:text-base">
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Local removals and deliveries</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Scrap metal collection</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Furniture and appliance removal</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Competitive rates</span>
              </li>
            </ul>
            <a 
              href="/DeezGarden/services/man-with-van/"
              class="inline-block w-full sm:w-auto text-center bg-fresh-green text-white px-6 py-3 rounded-lg font-semibold hover:bg-deep-green transition"
            >
              Learn More About Removals
            </a>
          </div>
          <div class="relative order-first lg:order-last">
            <img 
              src="/DeezGarden/assets/images/van scrap png.png" 
              alt="Man with Van and Scrap Metal Services" 
              class="rounded-lg shadow-lg w-full h-48 md:h-80 object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <CallToAction />
  
  <!-- Service Areas -->
  <section class="py-4 md:py-16 bg-gradient-to-b from-white to-light-green/5">
    <div class="container mx-auto px-4">
      <h2 class="text-xl md:text-3xl font-bold text-center mb-2 md:mb-8">Areas We Cover</h2>
      <p class="text-center text-sm md:text-lg mb-4 md:mb-8 max-w-2xl mx-auto">
        Serving Northampton and throughout Northamptonshire
      </p>
      
      <!-- Mobile: Compact areas with expand -->
      <AreasCompact />
      
      <!-- Desktop: Full grid of areas -->
      <div class="hidden md:block max-w-4xl mx-auto">
        <div class="grid grid-cols-3 lg:grid-cols-5 gap-4 text-center">
          {[...siteConfig.primaryAreas, ...siteConfig.secondaryAreas].map(area => (
            <a 
              href={`/DeezGarden/areas/${area.toLowerCase().replace(/ /g, '-')}/`}
              class="bg-white p-4 rounded-lg hover:bg-fresh-green hover:text-white transition font-semibold shadow-sm hover:shadow-md border border-gray-200 text-base"
            >
              {area}
            </a>
          ))}
        </div>
        
        <div class="text-center mt-8">
          <a 
            href="/DeezGarden/areas/"
            class="text-fresh-green font-semibold hover:text-deep-green transition text-lg"
          >
            View All Coverage Areas →
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <CallToAction text="Get Your Free Quote Today" />
  
  <!-- Why Choose Us -->
  <section class="py-4 md:py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-xl md:text-3xl font-bold mb-4 md:mb-8 text-center">Why Choose {siteConfig.name}?</h2>
        
        <WhyChooseUsCompact />
      </div>
    </div>
  </section>
  
  <!-- Hero CTA before footer -->
  <HeroCTA />
  
  <Footer slot="footer" />
</BaseLayout>
