---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import CallToAction from '../../components/CallToAction.astro';
import { siteConfig, services } from '../../config';
---

<BaseLayout 
  title="Our Services"
  description="Professional garden maintenance, clearance, landscaping, and removals services in Northampton. Fully insured and licensed waste carrier."
>
  <Header slot="header" />
  
  <Hero 
    title="Our Services"
    subtitle="Comprehensive garden and clearance solutions"
  />
  
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <p class="text-lg">
          At {siteConfig.name}, we offer a comprehensive range of services to keep your outdoor spaces looking their best and help with all your clearance needs. From regular garden maintenance to complete renovations, rubbish clearance, and removals, we've got you covered.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {services.map(service => (
          <div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition">
            <div class="text-5xl mb-6 text-center">{service.icon}</div>
            <h2 class="text-2xl font-bold mb-4 text-center">{service.title}</h2>
            <p class="text-gray-700 mb-6 text-center">{service.description}</p>
            <div class="text-center">
              <a 
                href={`/DeezGarden/services/${service.slug}/`}
                class="inline-block bg-fresh-green text-white px-6 py-3 rounded-lg font-semibold hover:bg-deep-green transition"
              >
                View Details
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <CallToAction />
  
  <!-- All Services List -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Complete Service List</h2>
      
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-bg-light p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4 text-fresh-green">Garden Services</h3>
            <ul class="space-y-2">
              <li>✓ Garden renovations and maintenance</li>
              <li>✓ Overgrown garden clearances</li>
              <li>✓ Grass cutting and lawn care</li>
              <li>✓ Hedge trimming and pruning</li>
              <li>✓ Landscaping and design</li>
              <li>✓ Fencing and gates</li>
              <li>✓ Patios and paving</li>
              <li>✓ Jet washing and cleaning</li>
            </ul>
          </div>
          
          <div class="bg-bg-light p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4 text-fresh-green">Clearance & Removals</h3>
            <ul class="space-y-2">
              <li>✓ Rubbish clearance and waste removal</li>
              <li>✓ Garden waste disposal</li>
              <li>✓ Garage clearances</li>
              <li>✓ House clearances</li>
              <li>✓ Man with van service</li>
              <li>✓ Removals and deliveries</li>
              <li>✓ Scrap metal collection</li>
              <li>✓ Licensed waste carrier</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <CallToAction text="Contact Us for a Free Quote" />
  
  <Footer slot="footer" />
</BaseLayout>

<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "ItemList",
  "itemListElement": services.map((service, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "item": {
      "@type": "Service",
      "name": service.title,
      "description": service.description,
      "provider": {
        "@type": "LocalBusiness",
        "name": siteConfig.name
      }
    }
  }))
})} />
