---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import TrustBadges from '../../components/TrustBadges.astro';
import CallToAction from '../../components/CallToAction.astro';
import HeroCTA from '../../components/HeroCTA.astro';
import { siteConfig, services } from '../../config';
---

<BaseLayout 
  title="Our Services"
  description="Professional garden maintenance, clearance, landscaping, and removals services in Northampton. Fully insured and licensed waste carrier."
>
  <Header slot="header" />
  
  <Hero 
    heroImage="hero.jpg"
    title="Our Services"
    subtitle="Complete garden and clearance solutions"
  />
  
  <TrustBadges />
  
  <section class="py-4 md:py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center mb-6 md:mb-12">
        <p class="text-sm md:text-lg">
          At {siteConfig.name}, we offer a comprehensive range of services to keep your outdoor spaces looking their best.
        </p>
      </div>
    </div>
  </section>

  <!-- Service 1: Garden Renovations & Maintenance -->
  <section class="py-4 md:py-16 bg-bg-light">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-12 items-center">
          <div>
            <h2 class="text-lg md:text-2xl font-bold mb-2 md:mb-4">Garden Renovations and Maintenance</h2>
            <p class="text-sm md:text-lg text-gray-700 mb-3 md:mb-6">
              Complete garden care including lawn mowing, hedge trimming, and general upkeep.
            </p>
            <ul class="space-y-1 md:space-y-2 mb-3 md:mb-6 text-xs md:text-base">
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Regular lawn mowing and maintenance</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Hedge trimming and pruning</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Garden clearances and tidy-ups</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Landscaping and garden design</span>
              </li>
            </ul>
            <a 
              href="/DeezGarden/services/garden-maintenance/"
              class="inline-block bg-fresh-green text-white px-4 py-2 md:px-6 md:py-3 rounded-lg font-semibold text-sm md:text-base hover:bg-deep-green transition"
            >
              View Full Details
            </a>
          </div>
          <div class="relative order-first lg:order-last">
            <img 
              src="/DeezGarden/assets/images/service-garden-renovations.jpg" 
              alt="Garden Renovations and Maintenance Services" 
              class="rounded-lg shadow-lg w-full h-40 md:h-80 object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service 2: Rubbish Clearance & Removals -->
  <section class="py-4 md:py-16 bg-gradient-to-br from-light-green/10 to-fresh-green/5">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-12 items-center">
          <div class="relative order-first">
            <img 
              src="/DeezGarden/assets/images/service-rubbish-clearance.jpg" 
              alt="Rubbish Clearance and Removals Services" 
              class="rounded-lg shadow-lg w-full h-40 md:h-80 object-cover"
            />
          </div>
          <div>
            <h2 class="text-lg md:text-2xl font-bold mb-2 md:mb-4">Rubbish Clearance and Removals</h2>
            <p class="text-sm md:text-lg text-gray-700 mb-3 md:mb-6">
              House, garage, and garden clearances with our licensed waste carrier service.
            </p>
            <ul class="space-y-1 md:space-y-2 mb-3 md:mb-6 text-xs md:text-base">
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Garden waste and rubbish removal</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>House and garage clearances</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Licensed waste carrier service</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Responsible waste disposal</span>
              </li>
            </ul>
            <a 
              href="/DeezGarden/services/clearance-removals/"
              class="inline-block bg-fresh-green text-white px-4 py-2 md:px-6 md:py-3 rounded-lg font-semibold text-sm md:text-base hover:bg-deep-green transition"
            >
              View Full Details
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service 3: Man with Van & Scrap Metal -->
  <section class="py-4 md:py-16 bg-bg-light">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-12 items-center">
          <div>
            <h2 class="text-lg md:text-2xl font-bold mb-2 md:mb-4">Man with Van and Scrap Metal</h2>
            <p class="text-sm md:text-lg text-gray-700 mb-3 md:mb-6">
              Removals, delivery service, and scrap metal collection across Northamptonshire.
            </p>
            <ul class="space-y-1 md:space-y-2 mb-3 md:mb-6 text-xs md:text-base">
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Local removals and deliveries</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Scrap metal collection</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Furniture and appliance removal</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2">✓</span>
                <span>Competitive rates</span>
              </li>
            </ul>
            <a 
              href="/DeezGarden/services/man-with-van/"
              class="inline-block bg-fresh-green text-white px-4 py-2 md:px-6 md:py-3 rounded-lg font-semibold text-sm md:text-base hover:bg-deep-green transition"
            >
              View Full Details
            </a>
          </div>
          <div class="relative order-first lg:order-last">
            <img 
              src="/DeezGarden/assets/images/van scrap png.png" 
              alt="Man with Van and Scrap Metal Services" 
              class="rounded-lg shadow-lg w-full h-40 md:h-80 object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <CallToAction />
  
  <!-- All Services List -->
  <section class="py-4 md:py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-lg md:text-3xl font-bold text-center mb-4 md:mb-12">Complete Service List</h2>
      
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-3 md:gap-6">
          <div class="bg-bg-light p-4 md:p-6 rounded-lg">
            <h3 class="text-base md:text-xl font-bold mb-2 md:mb-4 text-fresh-green">Garden Services</h3>
            <ul class="space-y-1 md:space-y-2 text-xs md:text-base">
              <li>✓ Garden renovations and maintenance</li>
              <li>✓ Overgrown garden clearances</li>
              <li>✓ Grass cutting and lawn care</li>
              <li>✓ Hedge trimming and pruning</li>
              <li>✓ Landscaping and design</li>
              <li>✓ Fencing and gates</li>
              <li>✓ Patios and paving</li>
              <li>✓ Jet washing and cleaning</li>
            </ul>
          </div>
          
          <div class="bg-bg-light p-4 md:p-6 rounded-lg">
            <h3 class="text-base md:text-xl font-bold mb-2 md:mb-4 text-fresh-green">Clearance & Removals</h3>
            <ul class="space-y-1 md:space-y-2 text-xs md:text-base">
              <li>✓ Rubbish clearance and waste removal</li>
              <li>✓ Garden waste disposal</li>
              <li>✓ Garage clearances</li>
              <li>✓ House clearances</li>
              <li>✓ Man with van service</li>
              <li>✓ Removals and deliveries</li>
              <li>✓ Scrap metal collection</li>
              <li>✓ Licensed waste carrier</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <HeroCTA />
  
  <Footer slot="footer" />
</BaseLayout>

<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "ItemList",
  "itemListElement": services.map((service, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "item": {
      "@type": "Service",
      "name": service.title,
      "description": service.description,
      "provider": {
        "@type": "LocalBusiness",
        "name": siteConfig.name
      }
    }
  }))
})} />
