---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import TrustBadges from '../../components/TrustBadges.astro';
import CallToAction from '../../components/CallToAction.astro';
import HeroCTA from '../../components/HeroCTA.astro';
import SlideOutQuoteForm from '../../components/SlideOutQuoteForm.astro';
import { siteConfig, services } from '../../config';
---

<BaseLayout 
  title="Our Services | Garden Maintenance, Clearance, Landscaping & More | Northampton"
  description="Professional garden maintenance, rubbish clearance, landscaping, man with van & scrap metal services in Northampton & Northamptonshire. Fully insured, licensed waste carrier. Free quotes."
>
  <Header slot="header" />
  
  <SlideOutQuoteForm />
  
  <Hero 
    heroImage="hero.jpg"
    title="Our Services"
    subtitle="Complete garden and clearance solutions"
    showQuoteButton={true}
  />
  
  <TrustBadges />
  
  <!-- Intro Section - Redesigned -->
  <section class="py-6 md:py-12 bg-bg-sage border-b-2 border-fresh-green/20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl shadow-lg p-6 md:p-10 border-2 border-fresh-green/20">
          <div class="text-center">
            <h2 class="text-lg md:text-2xl font-extrabold text-deep-green mb-3 md:mb-4 tracking-tight">Professional Garden & Clearance Solutions</h2>
            <p class="text-sm md:text-lg text-gray-700 leading-relaxed">
              At {siteConfig.name}, we offer a comprehensive range of services to keep your outdoor spaces looking their best. From regular garden maintenance to complete renovations, rubbish clearance, and reliable man with van services — we're your trusted local partner for all your outdoor needs.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service 1: Garden Renovations & Maintenance -->
  <section class="py-4 md:py-12 bg-bg-light border-b-2 border-fresh-green/20">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-12 items-center">
          <div>
            <h2 class="text-lg md:text-2xl font-extrabold mb-2 md:mb-4 tracking-tight">Garden Renovations and Maintenance</h2>
            <p class="text-sm md:text-lg text-gray-700 mb-3 md:mb-6">
              Complete garden care including lawn mowing, hedge trimming, and general upkeep.
            </p>
            <ul class="space-y-1 md:space-y-2 mb-3 md:mb-6 text-xs md:text-base">
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">✓</span>
                <span>Regular lawn mowing and maintenance</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">✓</span>
                <span>Hedge trimming and pruning</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">✓</span>
                <span>Garden clearances and tidy-ups</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">✓</span>
                <span>Landscaping and garden design</span>
              </li>
            </ul>
            <a 
              href="/services/garden-maintenance/"
              class="inline-block bg-fresh-green text-white px-4 py-2 md:px-6 md:py-3 rounded-lg font-bold text-sm md:text-base hover:bg-deep-green transition-all shadow-lg hover:shadow-xl border-2 border-fresh-green hover:border-deep-green"
            >
              View Full Details
            </a>
          </div>
          <div class="relative order-first lg:order-last">
            <img 
              src="/assets/images/service-garden-renovations.jpg" 
              alt="Garden Renovations and Maintenance Services" 
              class="rounded-lg shadow-xl w-full h-40 md:h-80 object-cover border-2 border-gray-200"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service 2: Rubbish Clearance & Removals -->
  <section class="py-4 md:py-12 bg-bg-sage border-b-2 border-fresh-green/20">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-12 items-center">
          <div class="relative order-first">
            <img 
              src="/assets/images/service-rubbish-clearance.jpg" 
              alt="Rubbish Clearance and Removals Services" 
              class="rounded-lg shadow-xl w-full h-40 md:h-80 object-cover border-2 border-gray-200"
            />
          </div>
          <div>
            <h2 class="text-lg md:text-2xl font-extrabold mb-2 md:mb-4 tracking-tight">Rubbish Clearance and Removals</h2>
            <p class="text-sm md:text-lg text-gray-700 mb-3 md:mb-6">
              House, garage, and garden clearances with our licensed waste carrier service.
            </p>
            <ul class="space-y-1 md:space-y-2 mb-3 md:mb-6 text-xs md:text-base">
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">✓</span>
                <span>Garden waste and rubbish removal</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">✓</span>
                <span>House and garage clearances</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">✓</span>
                <span>Licensed waste carrier service</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">✓</span>
                <span>Responsible waste disposal</span>
              </li>
            </ul>
            <a 
              href="/services/clearance-removals/"
              class="inline-block bg-fresh-green text-white px-4 py-2 md:px-6 md:py-3 rounded-lg font-bold text-sm md:text-base hover:bg-deep-green transition-all shadow-lg hover:shadow-xl border-2 border-fresh-green hover:border-deep-green"
            >
              View Full Details
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service 3: Man with Van & Scrap Metal -->
  <section class="py-4 md:py-12 bg-bg-light">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-12 items-center">
          <div>
            <h2 class="text-lg md:text-2xl font-extrabold mb-2 md:mb-4 tracking-tight">Man with Van and Scrap Metal</h2>
            <p class="text-sm md:text-lg text-gray-700 mb-3 md:mb-6">
              Removals, delivery service, and scrap metal collection across Northamptonshire.
            </p>
            <ul class="space-y-1 md:space-y-2 mb-3 md:mb-6 text-xs md:text-base">
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">✓</span>
                <span>Local removals and deliveries</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">✓</span>
                <span>Scrap metal collection</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">✓</span>
                <span>Furniture and appliance removal</span>
              </li>
              <li class="flex items-start">
                <span class="text-fresh-green mr-2 font-bold">✓</span>
                <span>Competitive rates</span>
              </li>
            </ul>
            <a 
              href="/services/man-with-van/"
              class="inline-block bg-fresh-green text-white px-4 py-2 md:px-6 md:py-3 rounded-lg font-bold text-sm md:text-base hover:bg-deep-green transition-all shadow-lg hover:shadow-xl border-2 border-fresh-green hover:border-deep-green"
            >
              View Full Details
            </a>
          </div>
          <div class="relative order-first lg:order-last">
            <img 
              src="/assets/images/van scrap png.png" 
              alt="Man with Van and Scrap Metal Services" 
              class="rounded-lg shadow-xl w-full h-40 md:h-80 object-cover border-2 border-gray-200"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <CallToAction showDualCTA={true} />
  
  <!-- All Services List -->
  <section class="py-4 md:py-12 bg-white border-b-2 border-fresh-green/20">
    <div class="container mx-auto px-4">
      <h2 class="text-lg md:text-3xl font-extrabold text-center mb-4 md:mb-10 tracking-tight">Complete Service List</h2>
      
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-3 md:gap-6">
          <div class="bg-bg-light p-4 md:p-6 rounded-lg border-l-4 border-fresh-green shadow-md">
            <h3 class="text-base md:text-xl font-extrabold mb-2 md:mb-4 text-fresh-green">Garden Services</h3>
            <ul class="space-y-1 md:space-y-2 text-xs md:text-base font-medium">
              <li>✓ Garden renovations and maintenance</li>
              <li>✓ Overgrown garden clearances</li>
              <li>✓ Grass cutting and lawn care</li>
              <li>✓ Hedge trimming and pruning</li>
              <li>✓ Landscaping and design</li>
              <li>✓ Fencing and gates</li>
              <li>✓ Patios and paving</li>
              <li>✓ Jet washing and cleaning</li>
            </ul>
          </div>
          
          <div class="bg-bg-light p-4 md:p-6 rounded-lg border-l-4 border-deep-green shadow-md">
            <h3 class="text-base md:text-xl font-extrabold mb-2 md:mb-4 text-deep-green">Clearance & Removals</h3>
            <ul class="space-y-1 md:space-y-2 text-xs md:text-base font-medium">
              <li>✓ Rubbish clearance and waste removal</li>
              <li>✓ Garden waste disposal</li>
              <li>✓ Garage clearances</li>
              <li>✓ House clearances</li>
              <li>✓ Man with van service</li>
              <li>✓ Removals and deliveries</li>
              <li>✓ Scrap metal collection</li>
              <li>✓ Licensed waste carrier</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <HeroCTA />
  
  <Footer slot="footer" />
</BaseLayout>

<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "ItemList",
  "itemListElement": services.map((service, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "item": {
      "@type": "Service",
      "name": service.title,
      "description": service.description,
      "provider": {
        "@type": "LocalBusiness",
        "name": siteConfig.name
      }
    }
  }))
})} />
