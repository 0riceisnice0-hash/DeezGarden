---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import TrustBadges from '../components/TrustBadges.astro';
import HeroCTA from '../components/HeroCTA.astro';
import SlideOutQuoteForm from '../components/SlideOutQuoteForm.astro';
---

<BaseLayout 
  title="Customer Reviews | Dee'z Gardens Northampton | 5-Star Garden Services"
  description="Read 5-star reviews from satisfied customers across Northampton & Northamptonshire. Professional garden maintenance, clearance & removals services. See why customers recommend us."
>
  <Header slot="header" />
  
  <SlideOutQuoteForm />
  
  <Hero 
    heroImage="hero.jpg"
    title="Customer Reviews"
    subtitle="See what our customers say about us"
    showQuoteButton={true}
  />
  
  <TrustBadges />
  
  <section class="py-6 md:py-16 bg-bg-sage">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <p class="text-center text-sm md:text-lg mb-6 md:mb-12 text-gray-700">
          We're proud of the service we provide. Here's what our customers say:
        </p>
        
        <div class="space-y-4 md:space-y-8">
          <!-- Review 1 -->
          <div class="bg-white p-4 md:p-8 rounded-lg shadow-md border border-light-green/20">
            <div class="flex items-center mb-2 md:mb-4">
              <div class="flex gap-0.5 md:gap-1 mr-3 md:mr-4">
