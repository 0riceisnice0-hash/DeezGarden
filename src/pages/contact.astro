---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import TrustBadges from '../components/TrustBadges.astro';
import HeroCTA from '../components/HeroCTA.astro';
import { siteConfig } from '../config';
---

<BaseLayout 
  title="Contact Us - Free Quotes for Garden & Clearance Services"
  description="Contact Dee'z Gardens for a free quote on garden maintenance, clearance, or removals in Northampton. Call 07305 195098 or email us today."
>
  <Header slot="header" />
  
  <Hero 
    heroImage="hero-contact.jpg"
    title="Contact Us"
    subtitle="Get a free, no-obligation quote"
  />
  
  <TrustBadges />
  
  <section class="py-4 md:py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-12">
          <!-- Contact Information -->
          <div>
            <h2 class="text-lg md:text-2xl font-bold mb-3 md:mb-6">Get in Touch</h2>
            <p class="mb-4 md:mb-8 text-sm md:text-lg">
              We'd love to hear from you! Get in touch using any of the methods below.
            </p>
            
            <div class="space-y-3 md:space-y-6">
              <div class="flex items-start space-x-3">
                <div class="w-7 h-7 md:w-8 md:h-8 bg-fresh-green rounded-full flex items-center justify-center text-white font-bold flex-shrink-0 text-xs md:text-sm">P</div>
                <div>
                  <h3 class="font-bold text-sm md:text-lg mb-0.5">Phone</h3>
                  <p class="text-gray-700 mb-1 text-xs md:text-sm">Our preferred contact method</p>
                  <a 
                    href={`tel:${siteConfig.phone}`}
                    class="text-base md:text-xl font-bold text-fresh-green hover:text-deep-green"
                  >
                    {siteConfig.phoneFormatted}
                  </a>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <div class="w-7 h-7 md:w-8 md:h-8 bg-fresh-green rounded-full flex items-center justify-center text-white font-bold flex-shrink-0 text-xs md:text-sm">E</div>
                <div>
                  <h3 class="font-bold text-sm md:text-lg mb-0.5">Email</h3>
                  <a 
                    href={`mailto:${siteConfig.email}`}
                    class="text-fresh-green hover:text-deep-green break-all text-xs md:text-base"
                  >
                    {siteConfig.email}
                  </a>
                </div>
              </div>
              
              {siteConfig.facebook && (
                <div class="flex items-start space-x-3">
                  <div class="w-7 h-7 md:w-8 md:h-8 bg-fresh-green rounded-full flex items-center justify-center text-white font-bold flex-shrink-0 text-xs md:text-sm">F</div>
                  <div>
                    <h3 class="font-bold text-sm md:text-lg mb-0.5">Facebook</h3>
                    <a 
                      href={siteConfig.facebook}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-fresh-green hover:text-deep-green text-xs md:text-base"
                    >
                      Join our Facebook group
                    </a>
                  </div>
                </div>
              )}
              
              <div class="flex items-start space-x-3">
                <div class="w-7 h-7 md:w-8 md:h-8 bg-fresh-green rounded-full flex items-center justify-center text-white font-bold flex-shrink-0 text-xs md:text-sm">L</div>
                <div>
                  <h3 class="font-bold text-sm md:text-lg mb-0.5">Service Area</h3>
                  <p class="text-gray-700 text-xs md:text-sm">{siteConfig.location}</p>
                  <a 
                    href="/DeezGarden/areas/"
                    class="text-fresh-green hover:text-deep-green text-xs md:text-sm"
                  >
                    View all areas we cover â†’
                  </a>
                </div>
              </div>
            </div>
            
            <div class="mt-4 md:mt-8 bg-bg-light p-3 md:p-6 rounded-lg">
              <h3 class="font-bold text-sm md:text-lg mb-1 md:mb-3">Opening Hours</h3>
              <p class="text-gray-700 text-xs md:text-base">Monday - Saturday: 8:00 AM - 6:00 PM</p>
              <p class="text-gray-700 text-xs md:text-sm mt-1">Sunday: Closed</p>
            </div>
          </div>
          
          <!-- Contact Form -->
          <div>
            <h2 class="text-lg md:text-2xl font-bold mb-3 md:mb-6">Send Us a Message</h2>
            <form 
              action="https://formspree.io/f/xgvekqvb"
              method="POST"
              class="space-y-3 md:space-y-4"
            >
              <div>
                <label for="name" class="block font-semibold mb-1 md:mb-2 text-xs md:text-base">Your Name *</label>
                <input 
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-3 py-2.5 md:py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-fresh-green text-sm md:text-base"
                  placeholder="John Smith"
                >
              </div>
              
              <div>
                <label for="email" class="block font-semibold mb-1 md:mb-2 text-xs md:text-base">Your Email *</label>
                <input 
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-3 py-2.5 md:py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-fresh-green text-sm md:text-base"
                  placeholder="john@example.com"
                >
              </div>
              
              <div>
                <label for="phone" class="block font-semibold mb-1 md:mb-2 text-xs md:text-base">Your Phone</label>
                <input 
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-3 py-2.5 md:py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-fresh-green text-sm md:text-base"
                  placeholder="07XXX XXXXXX"
                >
              </div>
              
              <div>
                <label for="service" class="block font-semibold mb-1 md:mb-2 text-xs md:text-base">Service Required</label>
                <select 
                  id="service"
                  name="service"
                  class="w-full px-3 py-2.5 md:py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-fresh-green text-sm md:text-base"
                >
                  <option value="">Please select...</option>
                  <option value="Garden Maintenance">Garden Maintenance</option>
                  <option value="Garden Renovation">Garden Renovation</option>
                  <option value="Clearance">Rubbish Clearance</option>
                  <option value="Man with Van">Man with Van</option>
                  <option value="Scrap Metal">Scrap Metal Collection</option>
                  <option value="Other">Other</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block font-semibold mb-1 md:mb-2 text-xs md:text-base">Your Message *</label>
                <textarea 
                  id="message"
                  name="message"
                  rows="3"
                  required
                  class="w-full px-3 py-2.5 md:py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-fresh-green text-sm md:text-base"
                  placeholder="Please provide details about the work you need..."
                ></textarea>
              </div>
              
              <button 
                type="submit"
                class="w-full bg-fresh-green text-white px-6 py-2.5 md:py-4 rounded-lg font-bold text-sm md:text-lg hover:bg-deep-green transition"
              >
                Send Message
              </button>
              
              <p class="text-xs md:text-sm text-gray-600 text-center">
                Or call us directly on <a href={`tel:${siteConfig.phone}`} class="text-fresh-green font-semibold">{siteConfig.phoneFormatted}</a>
              </p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <HeroCTA />
  
  <Footer slot="footer" />
</BaseLayout>
